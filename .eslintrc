{
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "globalReturn": true
    }
  },
  "env": {
    "mocha": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "semi": [1, "never"],
    "indent": ["warn", 2],
    "no-undef": "warn",
    "no-unused-vars": "warn"
  }
}