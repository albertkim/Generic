  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "rootDir": "src",
    "outDir": "build",
    "sourceMap": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
